
@{
    ViewData["Title"] = "Sign up";
    //Layout = "~/Views/Shared/Admin/_LayoutLogin.cshtml";
    Layout = null ;

}
<!DOCTYPE html>
<html dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/Adminmart/assets/images/favicon.png">
    <title>@ViewData["Title"]</title>

    <!-- Custom CSS -->
    <link href="~/Adminmart/dist/css/style.min.css" rel="stylesheet">

   
</head>

<body>

    <div class="main-wrapper">
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
             style="background:url(../Adminmart/assets/images/big/auth-bg.jpg) no-repeat center center;">
            <div class="auth-box row text-center">
                <div class="col-lg-6 col-md-5 modal-bg-img" style="        background-image: url(../Adminmart/assets/images/big/landingfix.png);width:auto; height:auto; ">
                </div>
                <div class="col-lg-6 col-md-7 bg-white">
                    <div class="p-3">
                        <img src="~/Adminmart/assets/images/favicon.png" alt="wrapkit">
                        <h2 class="mt-3 text-center">Sign Up for <strong>Reimbursement</strong> </h2>


                        <form action="javascript:register()" method="post" class="mt-4">
                            <div class="row">
                                <div class="col-lg-5">
                                    <div class="form-group">
                                        <input class="form-control rounded-pill" type="text" required id="firstname" name="firstname" placeholder="First Name">
                                    </div>

                                </div>
                                <div class="col-lg-7">
                                    <div class="form-group">
                                        <input class="form-control rounded-pill" type="text" required id="lastname" name="lastname" placeholder="Last Name">
                                    </div>
                                </div>

                                <div class="col-lg-5">

                                    <div class="form-group">
                                        <select class="form-control rounded-pill" id="gender" placeholder="Gender" name="gender">
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-7">
                                    <div class="form-group">
                                        <input class="form-control rounded-pill" type="date" id="date" required name="birthDate" placeholder="date">
                                    </div>
                                </div>


                                <div class="form-group">
                                    <input class="form-controll" type="text" id="roleId" hidden name="roleId" value="1">
                                </div>

                                <div class="col-lg-12">

                                    <div class="form-group">
                                        <input class="form-control rounded-pill" id="ManagerNik" name="ManagerNik" hidden value="0">

                                        <input class="form-control rounded-pill" id="address" name="address" required type="text" placeholder="Address">
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input class="form-control rounded-pill" id="email" name="email" required type="email" placeholder="Email">
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input class="form-control rounded-pill" id="password" name="password" type="password" pattern="^\S{6,}$" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Must have at least 6 characters' : ''); if(this.checkValidity()) form.password2.pattern = this.value;" placeholder="Password" required>

                                        @*<input class="form-control rounded-pill" type="password" required id="password" name="password" placeholder="password">*@
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input class="form-control rounded-pill" id="password2" name="password2" type="password" pattern="^\S{6,}$" onchange="this.setCustomValidity(this.validity.patternMismatch ? '' : '');" placeholder="Verify Password" required>

                                        @*<input class="form-control rounded-pill" type="password" required id="password2" name="password2" placeholder="retype-password">*@
                                        <span id="message"></span>
                                        <label id="message"></label>
                                    </div>
                                </div>
                                <div class="col-lg-12 text-center">
                                    <button type="submit" class="btn btn-block btn-dark rounded-pill">Sign Up</button>
                                </div>
                                <div class="col-lg-12 text-center mt-5">
                                    Already have an account? <a href="/login" class="text-danger ">Sign In</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- All Required js -->
    <!-- ============================================================== -->
    <script src="~/Adminmart/assets/libs/jquery/dist/jquery.min.js "></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/Adminmart/assets/libs/popper.js/dist/umd/popper.min.js "></script>
    <script src="~/Adminmart/assets/libs/bootstrap/dist/js/bootstrap.min.js "></script>
   

    <!-- ============================================================== -->
    <!-- This page plugin js -->
    <!-- ============================================================== -->
    <script>
        $(".preloader ").fadeOut();
    </script>

    <script src="~/js/register.js"></script>

</body>

</html>
