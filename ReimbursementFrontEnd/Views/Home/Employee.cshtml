@{
    ViewData["Role"] = @ViewBag.sessionRole;
    ViewData["NIK"] = @ViewBag.sessionNik;
    ViewData["Name"] = @ViewBag.sessionName;

    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-7 align-self-center">
            @*<h3 class="page-title text-truncate text-dark font-weight-medium mb-1"></h3>*@
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:void(0)">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <a href="javascript:void(0)"> @ViewData["Role"] </a>
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="col-5 align-self-center">
        </div>
    </div>
</div>

<div class="container-fluid">
    <!-- Start Top Leader Table -->
    <!-- *************************************************************** -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title font-weight-mediu">Table Request</h4>
                        <div class="ml-auto">
                            <div class="dropdown sub-dropdown">
                                <button class="btn btn-link text-muted dropdown-toggle" type="button"
                                        id="dd1" data-toggle="dropdown" aria-haspopup="true"
                                        aria-expanded="false">
                                    <i data-feather="more-vertical"></i>
                                </button>

                            </div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-2 pb-3">
                     

                        <button type="button" data-toggle="modal" data-target="#insertModal"  class="btn btn-success rounded-pill">
                        <i class="fas fa-plus-circle"></i></button>
                    </div>

                    <div class="table-responsive mt-2">
                        <table id="tableEmployee" class="table no-wrap v-middle mb-0">
                            <thead>
                                <tr class="border-0">
                                    <th class="border-0 font-14 font-weight-medium">
                                        No
                                    </th>
                                    <th class="border-0 font-14 font-weight-medium  ">
                                        Reimbursements ID
                                    </th>

                                    <th class="border-0 font-14 font-weight-medium ">Request Amount</th>
                                    <th class="border-0 font-14 font-weight-medium  text-center">
                                        Paid Amount
                                    </th>

                                    <th class="border-0 font-14 font-weight-medium ">Status</th>
                                    <th class="border-0 font-14 font-weight-medium ">Manager Status</th>
                                    <th class="border-0 font-14 font-weight-medium ">Finance Status</th>
                                    <th class="border-0 font-14 font-weight-medium text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody id="bodyEmployee">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="insertModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Request Reimbursements</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="javascript:insertRequest()">
                <div class="modal-body m-3">

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Request Amount</label>
                            <input type="number" class="form-control" id="requestAmount" required placeholder="">
                        </div>

                        <div class="form-group col-md-6">
                            <label>Categories</label>
                            <select class="form-control" id="category">
                                <option>Transportasi</option>
                                <option>Medical</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row-md-6">
                        <div class="form-group col-md-12">
                            <label>Uplaod File</label>
                            <input type="file" class="form-control-file" id="myPdf">
                        </div>
                    </div>

                    <div class="form-row-md-6">
                        <canvas id="pdfViewer"></canvas>
                    </div>


                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Notes</label>
                            <textarea class="form-control" id="notes" rows="3" placeholder="Text Here.."></textarea>
                        </div>
                    </div>
                    <button type="button" class="float-right btn btn-primary">Add</button>

                    <div class="table-responsive mt-2">
                        <table id="tableEmployee" class="table no-wrap v-middle mb-0">
                            <thead>
                                <tr class="border-0">
                                    <th class="border-0 font-14 font-weight-medium">No</th>
                                    <th class="border-0 font-14 font-weight-medium ">Request Amount</th>
                                    <th class="border-0 font-14 font-weight-medium ">Categories</th>

                                    <th class="border-0 font-14 font-weight-medium ">Notes</th>
                                    <th class="border-0 font-14 font-weight-medium ">File</th>
                                    <th class="border-0 font-14 font-weight-medium text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody id="bodyEmployee">
                            </tbody>


                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Submit</button>
                    </div>
                </div>
</form>

        </div>
    </div>
</div>




@section scripts{
    <script src="~/js/Employee.js" asp-append-version="true"></script>

}
