    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<div class="container bootstrap">

    <div class="row">
 
        <div class="col-sm-12">

            <div class="tab-content">
                <form class="form" action="javascript:savechange()" method="post" id="registrationForm">
