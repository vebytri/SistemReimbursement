                                @*<input type="text" class="form-control" name="newpassword" id="newpassword">*@
                                <input class="form-control rounded-pill" id="newpassword" name="newpassword" type="password" pattern="^\S{6,}$" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Must have at least 6 characters' : ''); if(this.checkValidity()) form.newpasswordverify.pattern = this.value;" placeholder="New Password" required>
                            </div>
                            <div class="form-group col-sm-2">

                            </div>



                            <div class="form-group col-sm-3">

                            </div>
                            <div class="form-group col-sm-3">
                                <label for="neewpasswordverify"> Verify Password </label>

                            </div>
                            <div class="form-group col-sm-4">

                              
                                <input class="form-control rounded-pill" id="newpasswordverify" name="newpasswordverify" type="password" pattern="^\S{6,}$" onchange="this.setCustomValidity(this.validity.patternMismatch ? '' : '');" placeholder="Verify Password" required>
                            </div>
                            <div class="form-group col-sm-2">
                                <span id="message"></span>
                            </div>

                           
                           

                        </div>
                        
